# Normalize line endings for text files
*.cs     text eol=lf
*.shader text eol=lf
*.txt    text eol=lf
*.md     text eol=lf
*.json   text eol=lf
*.xml    text eol=lf
*.yml    text eol=lf

# Treat binary files properly
*.unity  binary
*.prefab binary
*.fbx    binary
*.png    binary
*.jpg    binary
*.psd    binary
*.tga    binary
*.wav    binary
*.ogg    binary
*.mp3    binary
*.mp4    binary
*.avi    binary
*.dll    binary
*.exe    binary

# Prevent merge conflicts for Unity scene and prefab files
*.unity  merge=unityyamlmerge
*.prefab merge=unityyamlmerge
*.asset  merge=unityyamlmerge

# Ignore unwanted system files
.DS_Store export-ignore
Thumbs.db export-ignore
